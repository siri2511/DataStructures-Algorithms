package com.dsa.datastructures.linkedlist;

public class LinkedList {
	Node head;
	public void insert(int data) {
		Node node = new Node();
		node.data=data;
		node.next=null;
		
		if(head==null) {
			head=node;
		}
		else {
			Node n = head;
			while(n.next!=null) {
				n=n.next;
			}
			n.next=node;
		}
	}
	public void show() {
		Node n = head;
		while(n!=null) {
			System.out.print(n.data+" ");
			n=n.next;
		}
		System.out.println();
	}
	
	public void insertAtStart(int data) {
		Node node = new Node();
		node.data=data;
		node.next=head;
		head=node;
	}
	
	public void insertAt(int index, int data) {
		Node node = new Node();
		node.data=data;
		node.next=null;
		
		if(index==0) {
			insertAtStart(data);
		}
		Node n = head;
		for(int i=0; i<index-1 && n.next!=null; i++) {
			 n=n.next;
		}
		node.next=n.next;
		n.next=node;
	}
}
